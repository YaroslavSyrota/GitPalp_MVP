<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardView_ORH"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/container_padding_quart"
    android:layout_marginBottom="@dimen/container_padding_quart"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/container_padding_half"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName_ORH"
            style="@style/AppTheme.TextView.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDescription_ORH"
            style="@style/AppTheme.TextView.Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvNumberFork_ORH"
                style="@style/AppTheme.TextView.Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tvLanguage_ORH"
                style="@style/AppTheme.TextView.Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>