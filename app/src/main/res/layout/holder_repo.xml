<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardView_ORH"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/container_padding_quart"
    android:layout_marginBottom="@dimen/container_padding_quart"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/container_padding_half"
        android:orientation="horizontal"
        android:weightSum="4">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivAvatar_RH"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"
                android:layout_gravity="center_horizontal"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/view_vertical_margin_small"
            android:layout_weight="3">

            <TextView
                android:id="@+id/tvName_RH"
                style="@style/AppTheme.TextView.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:padding="0dp"/>

            <TextView
                android:id="@+id/tvDescription_RH"
                style="@style/AppTheme.TextView.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"/>

            <TextView
                android:id="@+id/tvNumberFork_RH"
                style="@style/AppTheme.TextView.Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"/>

            <TextView
                android:id="@+id/tvLanguage_RH"
                style="@style/AppTheme.TextView.Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>